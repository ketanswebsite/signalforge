# OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
CALLBACK_URL=http://localhost:3000/auth/google/callback
SESSION_SECRET=your_random_session_secret_min_32_chars
ALLOWED_USERS=email1@gmail.com,email2@gmail.com

# Application Configuration
PORT=3000
NODE_ENV=development

# Telegram Bot Configuration (for automated alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_default_chat_id

# Stock Scanner Configuration
# Scanner will run daily at 7 AM UK time by default
# To receive scan results, configure both TELEGRAM_BOT_TOKEN and TELEGRAM_CHAT_ID above